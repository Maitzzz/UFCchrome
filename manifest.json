{
  "name": "A browser action with a popup that changes the page color",
  "description": "Change the current page color",
  "version": "1.0",
  "permissions": ["gcm", "storage", "notifications","notifications","http://ufcdev.mait.fenomen.ee/api/subscribe"],
  "browser_action": {
    "default_title": "Set this page's color.",
    "default_icon": "icon.jpg",
    "default_popup" : "popup.html"
  },
  "manifest_version": 2,
  "background":
  {
    "scripts": ["page.js","jquery.min.js"]
  },

  "content_scripts": [{
    "js": [
      "jquery.min.js",
      "jquery-ui.min.js",
      "bg.js"
    ],
    "css": [ "jquery-ui.css" ],
    "matches": [ "<all_urls>" ]

  }]
}
